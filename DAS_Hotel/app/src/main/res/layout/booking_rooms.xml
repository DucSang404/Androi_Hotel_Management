<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Tiêu đề lớn -->
        <TextView
            android:id="@+id/tvBookingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Detail"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/seagreen"
            android:layout_marginBottom="16dp" />

        <!-- Khối chứa các trường thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@android:color/white">

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amit Kumar"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Mobile -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="9324324546"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:inputType="phone"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="amit@gmail.com"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:inputType="textEmailAddress"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Number of Persons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Persons:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNumberOfPersons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:inputType="number"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Number of Child -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Child:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etNumberOfChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="1"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:inputType="number"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Number of Room (Có nút - và +) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Room:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:paddingVertical="4dp">

                <Button
                    android:id="@+id/btnMinusRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="@color/seagreen"/>

                <TextView
                    android:id="@+id/tvNumberOfRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/btnPlusRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:layout_marginStart="16dp"
                    android:backgroundTint="@color/seagreen"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Date:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <!-- DatePicker thứ nhất -->
                <DatePicker
                    android:id="@+id/datePickerFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:gravity="center_horizontal"/>

                <!-- Khoảng cách giữa hai DatePicker -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Date:"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />
                <!-- DatePicker thứ hai -->
                <DatePicker
                    android:id="@+id/datePickerTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:gravity="center_horizontal"/>
            </LinearLayout>



            <!-- Total Amount -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etTotalAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="$1000"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:inputType="numberDecimal"
                android:paddingVertical="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Payment Method -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Method:"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/rbCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/rbQR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QR Code"
                    android:layout_marginStart="32dp"/>
            </RadioGroup>

        </LinearLayout>

        <!-- Nút Book Room -->
        <Button
            android:id="@+id/btnBookRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Room"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/seagreen"/>
    </LinearLayout>
</ScrollView>
